{
  "name": "@flair/starter-boilerplate",
  "version": "1.0.0",
  "description": "Indexing boilerplate components and scripts",
  "main": "manifest.yml",
  "repository": "git@github.com:flair-sdk/boilerplate.git",
  "author": "gm@flair.dev",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "generate": "find ./ -type f -name '*.mustache' -exec sh -c 'mustache ./config.json \"$1\" > \"${1%.mustache}\"' _ {} \\;",
    "generate:dev": "cp config.dev.json config.json && npm run generate",
    "generate:prod": "cp config.prod.json config.json && npm run generate",
    "deploy:dev": "cp config.dev.json config.json && npm run generate && flair deploy",
    "deploy:prod": "cp config.prod.json config.json && npm run generate && flair deploy"
  },
  "devDependencies": {
    "@types/node": "^20.3.2",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "flair-cli": "^1.18.0",
    "mustache": "^4.2.0",
    "prettier": "^2.8.8",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@ethersproject/bignumber": "^5.7.0",
    "bignumber.js": "^9.1.1",
    "flair-sdk": "^1.1.12"
  }
}
